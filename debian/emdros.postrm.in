#!/bin/sh
# postrm script for emdros
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	if [ -x "`which xdg-icon-resource 2>/dev/null`" -a -x "`which xdg-desktop-menu 2>/dev/null`" ]; then
     	  XDG_ICON_RESOURCE=`which xdg-icon-resource`
   	  XDG_DESKTOP_MENU=`which xdg-desktop-menu`

   	  if test "x$XDG_ICON_RESOURCE" != "x" -a "x$XDG_DESKTOP_MENU" != "x" -a "x@DO_WXWIDGETS@" = "xyes"; then
   	     if test -x $XDG_ICON_RESOURCE -a -x $XDG_DESKTOP_MENU; then
   	    	   $XDG_ICON_RESOURCE uninstall --size 16 emergence-blue-E || true
   	           $XDG_ICON_RESOURCE uninstall --size 22 emergence-blue-E || true
   	           $XDG_ICON_RESOURCE uninstall --size 32 emergence-blue-E || true
   	           $XDG_ICON_RESOURCE uninstall --size 48 emergence-blue-E || true
   	           $XDG_ICON_RESOURCE uninstall --size 64 emergence-blue-E || true

   	           $XDG_DESKTOP_MENU uninstall @prefix@/share/emdros/emergence-eqtu.desktop || true
   	           $XDG_DESKTOP_MENU uninstall @prefix@/share/emdros/emergence-importtool.desktop || true
   	     fi
   	  fi   
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
