#
# emdros.spec made from emdros.spec.in 
# via the configure script
#
%define ver          @VERSION@
%define rel          1%{?dist}
%define prefix       /usr
%define home_page    http://emdros.org/

######################################################################
# Usually, nothing needs to be changed below here between releases
######################################################################
Summary: The database engine for analyzed or annotated text
Name: emdros
Version: %{ver}
Release: %{rel}
URL: %{home_page}
Source0: emdros-@VERSION@.tar.gz
License: GPLv2
Group: Applications/Databases
Prefix: %{prefix}
#BuildRoot: %{_tmppath}/%{name}-root

%description 

Emdros is a text database engine for storage and retrieval of
annotated or analyzed text. Application domains include linguistics,
publishing, and text processing, with corpus linguistics being the
main target domain. Emdros has a powerful query-language for
query/create/update/delete operations.


%prep

%autosetup 

#%setup -q -n emdros-%{version}

%build

CFLAGS="$RPM_OPT_FLAGS $CFLAGS"
CXXFLAGS="$RPM_OPT_FLAGS $CXXFLAGS"
export CFLAGS CXXFLAGS
./configure @WITH_SWIG_JAVA@ @WITH_SWIG_PERL@ @WITH_SWIG_PHP@ @WITH_SWIG_PYTHON@ @WITH_SWIG_PYTHON3@ @WITH_SWIG_RUBY@ --disable-static --disable-dependency-tracking --enable-debug @WITH_WXWIDGETS@ @WITH_SQLITE2@ @WITH_SQLITE3@ @WITH_POSTGRESQL@ @WITH_MYSQL@ @WITH_BPT@ @WITH_BPT2@ @ENABLE_AMALGAMATION@ --prefix=%{prefix}
%make_build


%check

make test

%install

make install DESTDIR=%{buildroot}

%post
/sbin/ldconfig

XDG_ICON_RESOURCE=`which xdg-icon-resource`
XDG_DESKTOP_MENU=`which xdg-desktop-menu`

if test "x$XDG_ICON_RESOURCE" != "x" -a "x$XDG_DESKTOP_MENU" != "x"; then
   if test -x $XDG_ICON_RESOURCE -a -x $XDG_DESKTOP_MENU -a -x ${prefix}/bin/eqtu; then
      $XDG_ICON_RESOURCE install --size 16 %{prefix}/share/emdros/blue-E-16x16.png emergence-blue-E || true
      $XDG_ICON_RESOURCE install --size 22 %{prefix}/share/emdros/blue-E-22x22.png emergence-blue-E || true
      $XDG_ICON_RESOURCE install --size 32 %{prefix}/share/emdros/blue-E-32x32.png emergence-blue-E || true
      $XDG_ICON_RESOURCE install --size 48 %{prefix}/share/emdros/blue-E-48x48.png emergence-blue-E || true
      $XDG_ICON_RESOURCE install --size 64 %{prefix}/share/emdros/blue-E-64x64.png emergence-blue-E || true

      $XDG_DESKTOP_MENU install %{prefix}/share/emdros/emergence-eqtu.desktop || true
      $XDG_DESKTOP_MENU install %{prefix}/share/emdros/emergence-importtool.desktop || true
      $XDG_DESKTOP_MENU install %{prefix}/share/emdros/emergence-chunkingtool.desktop || true
   fi
fi

#
# This is preun rather than postun because we need to be able 
# to refer to the .desktop file, which would have been erased
# at postun.
#
%preun

#
# We need to check the argument to the script, which shows the
# number of packages of emdros installed.  Only when we reach 0
# can we erase emdros from the menu.
#
if test "x$1" == "x0"; then
   
   XDG_ICON_RESOURCE=`which xdg-icon-resource`
   XDG_DESKTOP_MENU=`which xdg-desktop-menu`

   if test "x$XDG_ICON_RESOURCE" != "x" -a "x$XDG_DESKTOP_MENU" != "x"; then
      if test -x $XDG_ICON_RESOURCE -a -x $XDG_DESKTOP_MENU -a -x ${prefix}/bin/eqtu; then
      	 $XDG_ICON_RESOURCE uninstall --size 16 emergence-blue-E || true
         $XDG_ICON_RESOURCE uninstall --size 22 emergence-blue-E || true
         $XDG_ICON_RESOURCE uninstall --size 32 emergence-blue-E || true
         $XDG_ICON_RESOURCE uninstall --size 48 emergence-blue-E || true
         $XDG_ICON_RESOURCE uninstall --size 64 emergence-blue-E || true

         $XDG_DESKTOP_MENU uninstall %{prefix}/share/emdros/emergence-eqtu.desktop || true
         $XDG_DESKTOP_MENU uninstall %{prefix}/share/emdros/emergence-importtool.desktop || true
         $XDG_DESKTOP_MENU uninstall %{prefix}/share/emdros/emergence-chunkingtool.desktop || true

      fi
   fi
fi



%postun
/sbin/ldconfig


%clean
rm -rf %{buildroot}


